<%= form_with model: menu do |form| %>

  <%= render "shared/form_errors", form: form %>
  
  <div class="field form-group">
    <% form.label :name %>
    <%= form.text_field :name, class:"form-control", placeholder: "Name" %>
  </div>
  <div class="field form-group">
    <% form.label :price %>
    <%= form.number_field :price, class:"form-control", placeholder: "Price" %>
  </div>
  <div class="field form-group">
    <% form.label :description %>
    <%= form.text_area :description, class:"form-control", placeholder: "Description" %>
  </div>
    <%= form.collection_check_boxes :category_ids, Category.all, :id, :name %>

<br/>
  <div class="actions">
    <%= form.submit class:'btn btn-secondary' %>
  </div>
<% end %>
